<Window x:Class="TicTacToe_ver_3._0.Players"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe_ver_3._0"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Players" Height="300" Width="300" Background="AliceBlue" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Insert names players" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30,0,0" FontSize="20" />
        <Label Content="Player 1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,-50,0,0" FontSize="15"/>
        <TextBox x:Name="txtBoxPlayer1" BorderBrush="Silver" Text="" Width="110" Height="16" Margin="77,82,73,132" />

        <Label Content="Player 2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,50,0,0" FontSize="15"/>
        <TextBox x:Name="txtBoxPlayer2" BorderBrush="Silver" Text=""  Width="110" Height="16" Margin="77,134,73,84"/>

        <Button x:Name="SavePlayers" Click="SavePlayers_Click" Content="SAVE" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Width="80" Background="LightYellow"/>
    </Grid>
</Window>
